<div class="col s12 m7">
    <div class="card horizontal">
      <div class="card-image">
        <%= image_tag asset_path(@product.image), :onerror => "this.src='http://smooch.jp/html/noimage.jpg'" %>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <div class="card-title">
            <%= @product.title %>
          </div>
          <p>製作者 : <%= @product.user.name %></p>
          <p><%= @product.detail %></p>
        </div>
        <div class="card-action">
          <%= link_to @product.link, @product.link %>
        </div>
      </div>
    </div>
  </div>
<div>
<h2>コメント一覧</h2>
            
<ul class="collection">
<% @votes.each do |vote| %>
    <li class="collection-item avatar">
      <% unless vote.user.image.nil? %>
      <%= image_tag asset_path(vote.user.image), 
        :onerror => "this.src='http://smooch.jp/html/noimage.jpg';", 
        :class => "circle" %>
    <% else %>
    <%= image_tag 'http://smooch.jp/html/noimage.jpg', :class => "circle" %>
    <% end %>
      
      <% pro = @products.select{ |pro| vote.user.id  == pro.user.id and @product.contest.id == pro.contest.id }.first %>
      <span class="title"><%= vote.user.name %></span>

      <% unless pro.nil? %>
      <a href="<%= result_contest_product_path(pro.contest_id, pro.id) %>" class="secondary-content"><i class="material-icons">send</i>
      </a>
      <% end %>
      <p>
         <%= vote.reason %>
      </p>
    </li>
<% end %>
  </ul>
<div/>
