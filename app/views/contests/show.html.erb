
<h1><%= @contest.title %></h1>

<% if Time.now > @contest.start_time and Time.now > @contest.end_time %>
  時間の変更
  <%= form_for(@contest) do |f| %>
  <label>日付の入力</label>              
    <input type="date" name="start_date" class="datepicker">   
    <label>時間の入力</label>              
    <input type="time" name="start_time" class="datepicker">

    <%= f.submit '登録' %>
  <% end %>
<% end %>


<% if @contest.end_time < Time.now or Time.now < @contest.start_time %>
  <h2>投票不可能<br>結果の表示</h2>
<div class="row">
  <% @products.each do |pro| %>
    <div class="col s4 m3 result-card">
      <div class="card">
        <div class="card-image">
          <% if pro.image == nil %>
            <%= image_tag asset_path('noimages.jpeg') %>
          <% else %>
            <%= image_tag asset_path(pro.image) %>
          <% end %>
          <span class="card-title"><%= pro.title %></span>
        </div>
        <div class="card-content">
          <p><%= pro.detail %></p>
        </div>
        <div class="card-action">
          <a href="<%= pro.link %>"><%= pro.link %></a>
        </div>
      </div>
      <!-- <% if @contest.end_time > Time.now %> -->
        <div class="result">
          43
        </div>
      <!-- <% else %> -->
        <div class="result">
          ??
        </div>
      <!-- <% end %> -->
    </div>

  <% end %>
</div>
<% else %>
<h2>投票可能</h2>
<%#jsで3つ選んだ感じにできるUI%>
<div class="row">
  <% @products.each do |pro| %>
    <div class="col s4 m3 result-card"> 
      <div class="card">
        <div class="card-image">
          <%= image_tag asset_path(pro.image) %>
          <span class="card-title"><%= pro.title %></span>
        </div>
        <div class="card-content">
          <p><%= pro.detail %></p>
        </div>
        <div class="card-action">
          <a href="<%= pro.link %>"><%= pro.link %></a>
        </div>
      </div>
      <!-- <% if @contest.end_time > Time.now %> -->
        <div class="result">
          43
        </div>
      <!-- <% else %> -->
        <div class="result">
          ??
        </div>
      <!-- <% end %> -->
    </div>
  <% end %>
</div>
  <a href="<%= new_contest_vote_path(params[:id]) %>">確認</a> 
<% end %>
