投票期間: <%= contest.start_time.to_datetime.strftime("%Y/%-m/%-d %-H:%M") %> -
<%= contest.end_time.to_datetime.strftime("%Y/%-m/%-d %-H:%M") %>
<% if current_user != nil && current_user.id == contest.admin_id %>
    <div style="background-color: #eee; padding: 1.2em">
      <strong>管理者機能</strong><br>
  <%= render partial: "contests/partials/change_end_time" %>
    </div>
<% end %>

<h2>投票期間は終了しました</h2>

<%= '終了' %>
<% if products.length != 0 %>
  <%= bar_chart chart %>
<% else %>
  データがありません
<% end %>

<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>

<div class="collection">
<% @products.sort{|a,b| b.votes.count <=> a.votes.count}.each do |pro|  %>
    <a href="<%= result_contest_product_path(pro.contest_id, pro.id) %>" class="collection-item avatar">
    <%= image_tag asset_path(pro.image), :onerror => "this.src='http://smooch.jp/html/noimage.jpg';", :class => "circle" %>
      <p class="collection-content">
      <span class="badge"><%= pro.votes.count %></span>
      作品名 : <%= pro.title %><br/>
      製作者 : <%= pro.user.name %>
      </p>
    </a>
<% end %>
</div>
